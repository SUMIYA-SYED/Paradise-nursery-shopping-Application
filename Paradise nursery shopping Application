4️⃣ public/script.js (Frontend JS)
js
Copy
Edit
fetch('/api/plants')
  .then(res => res.json())
  .then(data => {
    const plantList = document.getElementById('plant-list');
    data.forEach(plant => {
      const card = document.createElement('div');
      card.className = 'plant-card';
      card.innerHTML = `
        <h3>${plant.name}</h3>
        <p>Price: ₹${plant.price}</p>
        <button onclick="alert('Added ${plant.name} to cart!')">Add to Cart</button>
      `;
      plantList.appendChild(card);
    });
  });
