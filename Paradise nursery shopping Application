server.js (Express Backend)
js
Copy
Edit
const express = require('express');
const app = express();
const port = 3000;

app.use(express.static('public'));

const plants = [
  { id: 1, name: 'Rose', price: 150 },
  { id: 2, name: 'Tulip', price: 100 },
  { id: 3, name: 'Lavender', price: 180 }
];

app.get('/api/plants', (req, res) => {
  res.json(plants);
});

app.listen(port, () => {
  console.log(`Paradise Nursery app listening at http://localhost:${port}`);
});
